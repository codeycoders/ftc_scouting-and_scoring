<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ftc11253.ftcscoutingandscoring.MainActivity">

    <Button
        android:id="@+id/jewel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="jewelTeam1"
        android:text="jewel"
        app:layout_constraintBaseline_toBaselineOf="@+id/glyph"
        app:layout_constraintEnd_toStartOf="@+id/glyph"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/glyph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:onClick="glyphTeam1"
        android:text="glyph"
        app:layout_constraintEnd_toStartOf="@+id/vision"
        app:layout_constraintStart_toEndOf="@+id/jewel"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/vision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="glyphBonusTeam1"
        android:text="vision"
        app:layout_constraintEnd_toStartOf="@+id/park"
        app:layout_constraintStart_toEndOf="@+id/glyph"
        app:layout_constraintTop_toTopOf="@+id/glyph" />

    <Button
        android:id="@+id/park"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="parkTeam1"
        android:text="park"
        app:layout_constraintBaseline_toBaselineOf="@+id/vision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vision" />

    <Button
        android:id="@+id/jewel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="jewelTeam2"
        android:text="jewel"
        app:layout_constraintBaseline_toBaselineOf="@+id/glyph2"
        app:layout_constraintEnd_toStartOf="@+id/glyph2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/glyph2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:onClick="glyphTeam2"
        android:text="glyph"
        app:layout_constraintEnd_toStartOf="@+id/vision2"
        app:layout_constraintStart_toEndOf="@+id/jewel2"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/vision2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="glyphBonusTeam2"
        android:text="vision"
        app:layout_constraintEnd_toStartOf="@+id/park2"
        app:layout_constraintStart_toEndOf="@+id/glyph2"
        app:layout_constraintTop_toTopOf="@+id/glyph2" />

    <Button
        android:id="@+id/park2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="parkTeam2"
        android:text="park"
        app:layout_constraintBaseline_toBaselineOf="@+id/vision2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vision2" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Team 1 Points"
        app:layout_constraintStart_toStartOf="@+id/jewel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Team 2 Points"
        app:layout_constraintStart_toStartOf="@+id/jewel2"
        app:layout_constraintTop_toBottomOf="@+id/jewel" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Total Points:"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Team 2 Points:"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginBottom="57dp"
        android:layout_marginStart="16dp"
        android:text="Team 1 Points:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="7dp"
        android:onClick="undoButton"
        android:text="undo"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
